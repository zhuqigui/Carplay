<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_copy_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:text="拷贝视频"/>
    <Button
        android:id="@+id/btn_copy_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_copy_media"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:text="拷贝音乐"/>
    <Button
        android:id="@+id/btn_copy_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_copy_music"
        android:text="拷贝图片"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.third.zoom.common.widget.MediaListView
            android:id="@+id/lv_local_video_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:listSelector="@drawable/listview_color_selector"
            />
        <!--android:layout_marginTop="20dp"-->
    </LinearLayout>
</RelativeLayout>
