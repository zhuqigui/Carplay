<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.third.zoom.ytbus.activity.MainActivity">

    <com.third.zoom.common.widget.YTVideoView
        android:id="@+id/ytVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.third.zoom.common.widget.MarqueeTextViewV2
        android:visibility="invisible"
        android:id="@+id/txt_ad_content"
        android:textSize="@dimen/DIMEN_15sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_60dp"
        android:background="#55424242"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="1"
        android:singleLine="true"
        android:text="" />

    <ImageView
        android:id="@+id/img_error"
        android:src="@drawable/img_error"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
